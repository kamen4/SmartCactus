@model MqttViewModel
@using Microsoft.AspNetCore.Mvc.ViewFeatures

@{
    ViewData["Title"] = "MQTT";
}

<div class="text-center">
    <h1 class="display-4">MQTT</h1>

    @if(Model.IsStarted)
    {
        <p>Server is started!</p>

        <form asp-action="StopMQTTBroker" method="post">
            <button type="submit" class="btn btn-primary">Stop server</button>
        </form>

        <form asp-action="Publish" method="post">
            <label>
                Topic
                <input type="text" name="topic"/>
            </label>
            <label>
                Payload
                <input type="text" name="payload" />
            </label>
            <button type="submit" class="btn btn-primary">Publish</button>
        </form>
    }
    else
    {
        <form asp-action="StartMQTTBroker" method="post">
            <button type="submit" class="btn btn-primary">Start server</button>
        </form>        
    }
    
    <p>All devices are availble in @Html.ActionLink("Devices List", "Devices")</p>
</div>
